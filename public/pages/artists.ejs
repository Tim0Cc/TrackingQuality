<div id="artists" class="page">
  <h2>Artists & Researchers</h2>
  <div class="row px-2">
    <div class="navbar-container col-12 col-sm-4 col-md-3 col-lg-2">
      <nav id="navbar-artists" class="page-navbar">
        <ul class="nav flex-column">
          <h5 class="my-3">jump to:</h5>
          <% let first = true %> 
          <% artists.forEach(artist => { %>
            <li class="nav-item">
              <% if (first === true) { %> 
                <a class="nav-link px-0" href="#<%= artist.id %>"><%= artist.name %></a>
                <% first = false %> 
              <% } else { %>
                <a class="nav-link px-0" href="#<%= artist.id %>"><%= artist.name %></a>
              <% } %> 
            </li>
          <% }) %> 
        </ul>
      </nav>
    </div>
    <div class="catalogue-list artist-list col-12 col-sm-8 col-md-9 col-lg-10">
      <% artists.forEach(artist => { %>
        <div class="catalogue-item">
          <h3 id="<%= artist.id %>" class=""><%= artist.name %></h3>
          <div class="catalogue-references">
            <div class="catalogue-reference artist-links">
              <div class="catalogue-reference-content">
                <% links.forEach(link => { %>
                  <% link.artists.forEach(linkArtist => { %>
                    <ul>
                      <% if (linkArtist.id == artist.id && link.linkType == 'website') { %>
                        <li>
                          <a href="<%= link.linkUrl %>" target="_blank" rel="noopener noreferrer"><%= link.title %></a> <span>[<%= link.linkType %>]</span>
                          <p><%= link.description %></p>
                        </li>
                      <% } %> 
                      <% if (linkArtist.id == artist.id && link.linkType == 'book') { %>
                        <li>
                          <a href="<%= link.linkUrl %>" target="_blank" rel="noopener noreferrer"><%= link.title %></a> <span>[<%= link.linkType %>]</span>
                          <p><%= link.description %></p>
                        </li>
                      <% } %> 
                      <% if (linkArtist.id == artist.id && link.linkType == 'article') { %>
                        <li>
                          <a href="<%= link.linkUrl %>" target="_blank" rel="noopener noreferrer"><%= link.title %></a> <span>[<%= link.linkType %>]</span>
                          <p><%= link.description %></p>
                        </li>
                      <% } %> 
                      <% if (linkArtist.id == artist.id && link.linkType == 'video') { %>
                        <li>
                          <a href="<%= link.linkUrl %>" target="_blank" rel="noopener noreferrer"><%= link.title %></a> <span>[<%= link.linkType %>]</span>
                          <p><%= link.description %></p>
                        </li>
                      <% } %> 
                      <% if (linkArtist.id == artist.id && link.linkType == 'channel') { %>
                        <li>
                          <a href="<%= link.linkUrl %>" target="_blank" rel="noopener noreferrer"><%= link.title %></a> <span>[<%= link.linkType %>]</span>
                          <p><%= link.description %></p>
                        </li>
                      <% } %> 
                      <% if (linkArtist.id == artist.id && link.linkType == 'library') { %>
                        <li>
                          <a href="<%= link.linkUrl %>" target="_blank" rel="noopener noreferrer"><%= link.title %></a> <span>[<%= link.linkType %>]</span>
                          <p><%= link.description %></p>
                        </li>
                      <% } %>
                    </ul>
                  <% }) %> 
                <% }) %>          
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</div>