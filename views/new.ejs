<div class="bg-dark pb-5">

  <div class="container py-4 text-info">
    <h2>Administration Page for <em>CRUD</em>-operations</h2>
  </div>

  <div class="container bg-light bg-gradient mb-3 border rounded">
    <form action="/links" method="POST" class="px-4 py-3">
      <div class="form-group">
        <label for="link" class="form-label fs-4 fw-bolder">link</label>
        <input type="text" name="linkName" id="link-name" class="form-control mb-2">
        <%- include('./partials/_button_submit') %> 
      </div>
    </form>
  </div>

  <div class="container bg-light bg-gradient mb-3 border rounded">
    <form action="/artists" method="POST" class="px-4 py-3">
      <div class="form-group">
        <label for="artist" class="form-label fs-4 fw-bolder">artist</label>
        <input type="text" name="artistName" id="artist-name" class="form-control mb-2">
      </div>
      <%- include('./partials/_button_submit') %> 
    </form>
  </div>

  <div class="container bg-light bg-gradient mb-3 border rounded">
    <form action="/publications" method="POST" class="px-4 py-3">
      <div class="form-group">
        <label for="publication" class="form-label fs-4 fw-bolder">publication</label>
        <input type="text" name="publicationName" id="publication-name" class="form-control mb-2">
      </div>
      <div class="">
        <label class="form-label fs-5 fw-normal">publication artists</label>
        <select name="publicationArtists" class="form-select" multiple>
          <% artists.forEach(artist => { %>
            <option label="<%= artist.name %>" value="<%= artist.id %>">
          <% }) %> 
        </select>
      </div>
      <%- include('./partials/_button_submit') %> 
    </form>
  </div>

</div>