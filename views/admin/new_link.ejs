<div class="bg-dark pb-5 text-dark">

  <div class="container py-4 text-info">
    <h2>Administration Page for <em>CRUD</em>-operations - Links</h2>
    <div class="btn-row">
      <a href="/create" class="btn btn-primary">create</a>
      <a href="/edit" class="btn btn-warning">edit</a>
      <div class="btn-row float-end">
        <a href="/edit/links" class="btn btn-warning">edit links</a>
      </div>
    </div>
  </div>

<!-- LINK -->

  <div class="container bg-light bg-gradient mb-3 border rounded">
    <form action="/create/link" method="POST" class="px-4 py-3">
      <h3>new Link</h3>
      <div class="form-group">
        <label for="title" class="form-label fs-4 fw-bolder">title</label>
        <input type="text" name="title" id="title" class="form-control mb-2">
      </div>
      <div class="form-group">
        <label for="description" class="form-label fs-4 fw-bolder">description</label>
        <input type="text" name="description" id="description" class="form-control mb-2">
      </div>
      <div class="form-group">
        <label for="linkUrl" class="form-label fs-4 fw-bolder">url</label>
        <input type="text" name="linkUrl" id="link-url" class="form-control mb-2">
      </div>
      <div class="form-group">
        <%- include('../admin/partials/_input_types') %> 
      </div>
      <div class="form-group">
        <label class="form-label fs-5 fw-normal">link artists</label>
        <select name="linkArtists" class="form-select" multiple>
          <% artists.forEach(artist => { %>
            <option label="<%= artist.name %>" value="<%= artist.id %>">
          <% }) %> 
        </select>
      </div>
      <div class="form-group">
        <label class="form-label fs-5 fw-normal">link publications</label>
        <select name="linkPublications" class="form-select" multiple>
          <% publications.forEach(publication => { %>
            <option label="<%= publication.name %>" value="<%= publication.id %>">
          <% }) %> 
        </select>
      </div>
      <div class="form-group">
        <label class="form-label fs-5 fw-normal">link institutions</label>
        <select name="linkInstitutions" class="form-select" multiple>
          <% institutions.forEach(institution => { %>
            <option label="<%= institution.name %>" value="<%= institution.id %>">
          <% }) %> 
        </select>
      </div>
      <%- include('../admin/partials/_button_submit') %> 
    </form>
  </div>

</div>