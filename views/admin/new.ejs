<div class="bg-dark pb-5 text-dark">

  <div class="container py-4 text-info">
    <h2>Administration Page for <em>CRUD</em>-operations</h2>
    <div class="btn-row">
      <a href="/edit" class="btn btn-warning">edit</a>
    </div>
  </div>

  <!-- ARTIST -->

  <div class="container bg-light bg-gradient mb-3 border rounded">
    <form action="/create/artist" method="POST" class="px-4 py-3">
      <div class="form-group">
        <label for="artist" class="form-label fs-4 fw-bolder">artist</label>
        <input type="text" name="artistName" id="artist-name" class="form-control mb-2">
      </div>
      <%#- include('../admin/partials/_input_types') %> 
      <%- include('../admin/partials/_button_submit') %> 
    </form>
  </div>

<!-- PUBLICATION -->

  <div class="container bg-light bg-gradient mb-3 border rounded">
    <form action="/create/publication" method="POST" class="px-4 py-3">
      <div class="form-group">
        <label for="publication" class="form-label fs-4 fw-bolder">publication</label>
        <input type="text" name="publicationName" id="publication-name" class="form-control mb-2">
      </div>
      <div class="">
        <label class="form-label fs-5 fw-normal">publication artists</label>
        <select name="publicationArtists" class="form-select" multiple>
          <% artists.forEach(artist => { %>
            <option label="<%= artist.name %>" value="<%= artist.id %>">
          <% }) %> 
        </select>
      </div>
      <%#- include('../admin/partials/_input_types') %> 
      <%- include('../admin/partials/_button_submit') %> 
    </form>
  </div>

<!-- INSTITUTION -->

  <div class="container bg-light bg-gradient mb-3 border rounded">
    <form action="/create/institution" method="POST" class="px-4 py-3">
      <div class="form-group">
        <label for="institution" class="form-label fs-4 fw-bolder">institution</label>
        <input type="text" name="institutionName" id="institution-name" class="form-control mb-2">
      </div>
      <div class="">
        <label class="form-label fs-5 fw-normal">institution artists</label>
        <select name="institutionArtists" class="form-select" multiple>
          <% artists.forEach(artist => { %>
            <option label="<%= artist.name %>" value="<%= artist.id %>">
          <% }) %> 
        </select>
      </div>
      <%#- include('../admin/partials/_input_types') %> 
      <%- include('../admin/partials/_button_submit') %> 
    </form>
  </div>

</div>